import request from "supertest";
import app from "../../server";
import { {{camelCase name}}s, close } from "../../db";

afterAll(() => {
  close().then();
});

const {{camelCase name}} = {
/* creation params here */
};

describe("{{titleCase name}} create tests", () => {
