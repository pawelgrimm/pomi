const bindQueries = (query) => {
  return {
    create: ({}) =>
      query("INSERT INTO {{camelCase name}}s() VALUES ()", []).then(
        (res) => res.rows
      ),

    selectAll: () =>
      query("SELECT * FROM {{camelCase name}}s").then((res) => res.rows),

    selectOneById: (id) =>
      query("SELECT * FROM {{camelCase name}}s WHERE id = $1", [id]).then(
        (res) => res.rows
      ),
  };
};

module.exports = bindQueries;
